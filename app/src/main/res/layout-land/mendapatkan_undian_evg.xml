<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_undianvg"
    android:scaleType="fitXY"
    tools:context=".Main_undian_evg">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="355dp"
        android:layout_height="80dp"
        android:layout_marginLeft="212dp"
        android:layout_marginTop="200dp"
        android:onClick="wheel1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/rectangle_5"
            android:layout_width="362dp"
            android:layout_height="80dp"
            android:background="@drawable/rectangle_5" />

        <TextView
            android:id="@+id/diskon70"
            android:layout_width="391dp"
            android:layout_height="124dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_extrabold"
            android:gravity="center_horizontal|center_vertical"
            android:lineHeight="24sp"
            android:text="@string/diskon70h"
            android:textAppearance="@style/diskon70h" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="355dp"
        android:layout_height="74dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/selamat_and"
            android:layout_width="384dp"
            android:layout_height="89dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_horizontal|center_vertical"
            android:lineHeight="28sp"
            android:text="@string/selamat_anda"
            android:textAppearance="@style/selamat_anda" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
